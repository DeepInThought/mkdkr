#!/bin/bash

test_mkdkr_run_simple() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine

  .. echo "hello world!"
  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_return_error() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine

  (.. noooooo)&

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_arguments() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... ubuntu

  .. apt-get update -qq
  .. apt-get install htop -y
  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_line-break() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine

  .. apk add \
    curl \
    htop \
    bash

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_escape() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... debian

  .. apt-get update \&\& \
    apt-get install \
      curl \
      htop -y

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_pipe() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine

  .. ls -la \| wc -l

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_redirect_internal() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine

  .. ls -la \> /tmp/my-file

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

test_mkdkr_get_output() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine

  OUT=$(.. ls -la)

  echo $OUT

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}


test_mkdkr_print_env_var() {
  # shellcheck disable=SC1091
  source .mkdkr
  unset MKDKR_JOB_NAME

  NAME="simple_instance"
  .... "${NAME}"

  ... alpine \
    --env "name=foo" \
    --env "last=bar" \
    --env "fullname=foo bar"

  .. echo '$name'
  .. echo '$last'
  .. echo '$fullname'

  .

  _pretty "light_green" "\nRan 1 assert(s)\n"
}

# shellcheck disable=SC1091
. ./shunit2